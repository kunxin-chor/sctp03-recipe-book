<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    <div class="container">
        <form method="POST">
            <h1>Create new food sighting</h1>
            <div>
                <label>Title:</label>
                <input type="text" name="title" class="form-control"/>
            </div>
            <div>
                <label>Location:</label>
                <input type="text" name="location" class="form-control"/>
            </div>
            <div>
                <label>Food Cuisine</label>
                <input type="radio" name="cuisine" value="chinese" checked/><label>Chinese</label>
                <input type="radio" name="cuisine" value="japanese"/><label>Japanese</label>
                <input type="radio" name="cuisine" value="others"/><label>Others</label>
            </div>
            <div>
                <label>Ingredients</label>
                <input type="checkbox" name="ingredients" value="starch"/>
                <label>Starch</label>

                <input type="checkbox" name="ingredients" value="meat"/>
                <label>Meat</label>

                <input type="checkbox" name="ingredients" value="seafood"/>
                <label>Seafood</label>

                <input type="checkbox" name="ingredients" value="dairy"/>
                <label>Dairy</label>
            </div>
            <input type="submit" value="Create" class="mt-3"/>
        </form>


    </div>
  </body>
</html>